@using  ChatApp.Models.Group;

@model CreateGroupModel
    <ul>
        <form enctype="multipart/form-data" asp-controller="Group" asp-action="CreatePost" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="Name" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="col-sm-2"></label>
                <input class="form-control" asp-for="Photo" type="file" />
                <span accept=".jpg,.jpeg,.png" class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="col-sm-2"></label>
                <input class="form-control" asp-for="Content" type="text" />
                <span class="text-danger" asp-validation-for="Content"></span>
            </div>
            <button type="submit" class="btn-primary"> Submit </button>
            <div asp-validation-summary="All"></div>
        </form>
    </ul>
