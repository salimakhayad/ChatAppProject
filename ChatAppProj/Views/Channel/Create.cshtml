@model CreateChannelModel
@using System.Security.Claims;
@using ChatApp.Models.Channel;

    <div class="flexbox-container">
        <div class="flexbox-item flexbox-item-1">
           
            <form class="chat-input" asp-controller="Channel" asp-action="Create">
                @Html.HiddenFor(c => c.groupId)
                <input type="text" asp-for="@Model.Name" id="message-input" autofocus />
                <button type="submit"> Create Channel</button>
            </form>
        </div>
      
    </div>


