@model ChatApp.Domain.Profiel
    <li class="col-4">
        @if (Model.UserName != User.Claims.ToArray()[1].Value.ToString())
        {
            @if (Model.ProfielFoto != null)
            {
                <img class="profilePicture" width="200" height="150" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.ProfielFoto))" alt="profielFoto" />
            }
            <h2>@Model.UserName</h2>
            <p>@Model.Naam</p>
            <p><a class="btn btn-secondary" href="#" role="button">Stuur berichtje »</a></p>
        }
    </li>